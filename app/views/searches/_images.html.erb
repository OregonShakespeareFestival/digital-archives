<section class="results-section images is-active" data-total-items='1'>
  <div class="sidebar-item">
    <a class="file-type active" data-type='images'>Images</a>
    <p class="file-type-count"><%= @files["Image"].size %></p>
  </div>
  <h2 class="results-section-title">Images</h2>

  <div id="grid-gallery" class="grid-gallery">
    <section class="grid-wrap">
      <ul class="grid card-grid">
        <li class="grid-sizer" />
        <% @files["Image"].each do |image| %>
          <li class="card-container">
            <a class="card card--has-image card--overlay-content">
              <figure class="card__figure">
                <img class="card__figure__image" src="<%= sufia.download_path(image, datastream_id: 'thumbnail') %>" alt="<%= image.title.first %>" />
              </figure>
              <div class="card__content">
                <h1 class="card__content__title">
                  <%= image.title.first %>
                </h1>
                <p class="card__content__date">
                  <%= image.date_created.first %>
                </p>
              </div>
            </a>
          </li>
        <% end %>
      </li>
      </ul>
    </section>
    <div class="paging">
      if hasNextPage
        a{action 'page' 'images' 1} href="#"
          | Load More
    </div>
    <section class="slideshow">
      <ul>
        = group
          = each model.data
            li
              figure
                img.slideshow-img src="#{OsfArchivesWeb.API_HOST}#{url}" alt=title
              figcaption
                h3
                  =metadata.title
                p
                  =metadata.production_name
                p
                  =metadata.venue_name
                p
                  =metadata.description
                p
                  =metadata.date_created
      </ul>
      <nav>
        <span class="icon nav-prev" />
        <span class="icon nav-next" />
        <span class="icon nav-close" />
      </nav>
      <div class="info-keys icon">Navigate with arrow keys</div>
  </div>
</section>
