<section class="results-section articles is-active" data-total-items='1'>
  <div class="sidebar-item">
    <a class='file-type active' data-type='articles'>Articles</a>
    <p class="file-type-count">{{totalItems}}</p>
  </div>
  <h2 class="results-section-title">Documents</h2>
  <div class="card-grid">
    = group
      = each model.data
        .card-container
          a.card.card-has-img target="_blank" href="#{OsfArchivesWeb.API_HOST}#{url}"
            .card-figure-img
              img src="#{OsfArchivesWeb.API_HOST}#{thumb_url}" alt=title
            .card-content
              h3.card-content-title
                =title
              h4.card-content-subtitle
                | The Production
  </div>
  <div class="paging">
    if hasNextPage
      a{action 'page' 'articles' 1} href="#"
        | More
  </div>
</section>
