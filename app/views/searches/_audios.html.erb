<section class="results-section audios <%= @audios.any? ? "is-active" : "" %>">
  <div class="sidebar-item">
    <a class="file-type">
      <%= image_tag("icons/icon-audios", alt: "Audios", class: "filter-type-image") %>
    </a>
    <p class="file-type-count"><%= @audios.size %></p>
  </div>
  <h2 class="results-section-title">Audio</h2>
  <div>
    <% @audios.each do |audio| %>
      <img src="<%= sufia.download_path(audio, datastream_id: 'thumbnail') %>" alt="<%= audio.title.first %>" />
      <audio controls="controls">
        <source src="<%= sufia.download_path(audio) %>" />
      </audio>
      </li>
    <% end %>
  </div>
